#!/usr/bin/env sh

if [ -x $(which setxkbmap) ]
then
  setxkbmap fr
fi

if [ -x $(which sxhkd) ]
then
  sxhkd &
fi

# Add xrandr logic
# xrandr --output DP1 --left-of eDP1
# Add xprop mouse logic
# xinput --list --id-only "$(xinput --list --name-only | grep Corsair)"
# xinput --set-prop 15 309 -0.8
# Need specific setup
# picom --backend glx --vsync --detect-client-opacity --dbus -CGf

if [ -x $(which hsetroot) -a -f ${HOME}/.wallpaper.jpeg ] 
then
  hsetroot -tile ${HOME}/.wallpaper.jpeg
fi
  
if [ -x $(which picom) ]
then
  picom --dbus -cf &
fi

exec dbus-run-session cwm
